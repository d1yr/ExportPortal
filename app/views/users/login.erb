<%if flash[:message]%>
    <%flash[:message].each do |e|%>
        <p><%=e%></p>
     <%end%>
<%end%>
<h1>Login</h1>

<%= form_tag "/login" do  %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <br>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br>
    <%= submit_tag "Log in!" %>
<% end %>