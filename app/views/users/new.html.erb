<h1>Create a Login</h1>


<%if flash[:my_errors]%>
    <%flash[:my_errors].each do |e|%>
        <p><%=e%></p>
     <%end%>
<%end%>


<%=form_for @user do |f|%>
<%=f.label :name%>
<%=f.text_field :name%>
<br>
<%=f.label :email%>
<%=f.email_field :email%>
<br>
<%=f.label :password%>
<%=f.password_field :password%>
<br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<br>
<%=f.submit "Signup"%>
<%end%>